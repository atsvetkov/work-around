<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="WorkAround - job search aggregator" />
    <meta name="author" content="Alexander Tsvetkov" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" type="text/css" href="http://cdn.ink.sapo.pt/3.1.0/css/ink-flex.min.css">
    <link rel="stylesheet" type="text/css" href="http://cdn.ink.sapo.pt/3.1.0/css/font-awesome.min.css">
    
    <!-- load inks css for IE8 -->
    <!--[if lt IE 9 ]>
        <link rel="stylesheet" href="http://cdn.ink.sapo.pt/3.1.0/css/ink-ie.min.css" type="text/css" media="screen" title="no title" charset="utf-8">
    <![endif]-->
    <!-- test browser flexbox support and load legacy grid if unsupported -->
    <script type="text/javascript" src="http://cdn.ink.sapo.pt/3.1.0/js/modernizr.js"></script>
    <script type="text/javascript">
        Modernizr.load({
            test: Modernizr.flexbox,
            nope: 'http://cdn.ink.sapo.pt/3.1.0/css/ink-legacy.min.css'
        });
    </script>

    <script src="~/scripts/angular.js"></script>
    <script src="~/scripts/angular-resource.js"></script>
    <script src="~/app/app.js"></script>
    <script src="~/app/controllers/searchControllers.js"></script>
    <script src="~/app/services/searchServices.js"></script>

    <style type="text/css">
        html, body {
            height: 100%;
            background: #f0f0f0;
        }

        .wrap {
            min-height: 100%;
            height: auto !important;
            height: 100%;
            margin: 0 auto -120px;
            overflow: auto;
        }

        footer {
            background: #ccc;
            border: 0;
        }
        
        .push, footer {
            height: 120px;
            margin-top: 0;
        }

        footer * {
            line-height: inherit;
        }
    </style>



    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
    <body>
        <div class="wrap">
            <header class="clearfix">
                <div class="ink-grid">
                    <div class="ink-navigation xlarge-push-right large-push-right half-top-space">
                        @if (@User.Identity.IsAuthenticated)
                        {
                            using (@Html.BeginForm("Logoff", "Auth", FormMethod.Post, new { @class = "ink-form " }))
                            {
                                <div class="control-group column-group gutters">
                                    <div class="control right-space">
                                        @Html.ActionLink(User.Identity.Name, "Index", "Profile")
                                    </div>

                                    <div class="control">
                                        @Html.ActionLink("Sign out", "Logoff", "Auth")
                                    </div>
                                </div>

                            }
                        }
                        else
                        {
                            @Html.ActionLink("Sign in", "Login", "Auth") <span>or</span> @Html.ActionLink("Sign up", "Register", "Auth")
                        }

                    </div>
                </div>
            </header>



            <div class="ink-grid">
                @RenderBody()
            </div>

            <div class="push"></div>
        </div>
        
        <footer class="clearfix">
            <div class="ink-grid">
                <ul class="unstyled inline half-vertical-space">
                    <li class="active">
                        @Html.ActionLink("Search", "Index", "Search")
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Contacts</a>
                    </li>
                </ul>
            </div>
        </footer>

    </body>
</html>